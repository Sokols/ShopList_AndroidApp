<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/currentListsFragment">

    <fragment
        android:id="@+id/currentListsFragment"
        android:name="pl.sokols.shoppinglist.ui.current.CurrentListsFragment"
        android:label="CurrentListsFragment" >
        <action
            android:id="@+id/action_currentListsFragment_to_listDetailsFragment"
            app:destination="@id/listDetailsFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/listDetailsFragment"
        android:name="pl.sokols.shoppinglist.ui.details.ListDetailsFragment"
        android:label="ListDetailsFragment" >
        <argument
            android:name="@string/list_id"
            app:argType="integer" />
    </fragment>
</navigation>